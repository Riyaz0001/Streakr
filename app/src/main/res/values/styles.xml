<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorTextAndIcons">@color/colorTextAndIcons</item>
        <item name="goalListBackgroundSelector">@drawable/list_goalshabits_item_selector</item>
        <item name="preferenceTheme">@style/DefaultPreferenceTheme</item>
        <item name="basicHeaderText">@style/DefaultThemeBasicHeaderText</item>
        <item name="basicHeaderTextLight">@style/DefaultThemeBasicHeaderTextLight</item>
        <item name="secondaryText">@style/DefaultThemeSecondaryText</item>
        <item name="secondaryTextLight">@style/DefaultThemeSecondaryTextLight</item>
        <item name="popUpMenuTheme">@style/DefaultPopUpMenuTheme</item>
        <item name="backgroundTheme">@style/DefaultBackgroundTheme</item>
        <item name="backgroundThemeDark">@style/DefaultBackgroundThemeDark</item>
        <item name="iconPrimaryColor">@color/colorPrimaryText</item>
        <item name="iconPrimaryColorLight">@color/colorPrimaryLight</item>
        <item name="iconSecondaryColor">@color/colorAccent</item>
    </style>

    <!-- Pink application theme. -->
    <style name="PinkAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryPink</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkPink</item>
        <item name="colorAccent">@color/colorAccentPink</item>
        <item name="colorTextAndIcons">@color/colorTextAndIconsPink</item>
        <item name="goalListBackgroundSelector">@drawable/list_goalshabits_item_selector_pink</item>
        <item name="preferenceTheme">@style/PinkPreferenceTheme</item>
        <item name="basicHeaderText">@style/PinkThemeBasicHeaderText</item>
        <item name="basicHeaderTextLight">@style/PinkThemeBasicHeaderTextLight</item>
        <item name="secondaryText">@style/PinkThemeSecondaryText</item>
        <item name="secondaryTextLight">@style/PinkThemeSecondaryTextLight</item>
        <item name="popUpMenuTheme">@style/PinkPopUpMenuTheme</item>
        <item name="backgroundTheme">@style/PinkBackgroundTheme</item>
        <item name="backgroundThemeDark">@style/PinkBackgroundThemeDark</item>
        <item name="iconPrimaryColor">@color/colorPrimaryTextPink</item>
        <item name="iconPrimaryColorLight">@color/colorPrimaryLightPink</item>
        <item name="iconSecondaryColor">@color/colorAccentPink</item>
    </style>

    <!-- Blue application theme. -->
    <style name="BlueAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBlue</item>
        <item name="colorAccent">@color/colorAccentBlue</item>
        <item name="colorTextAndIcons">@color/colorTextAndIconsBlue</item>
        <item name="goalListBackgroundSelector">@drawable/list_goalshabits_item_selector_blue</item>
        <item name="preferenceTheme">@style/BluePreferenceTheme</item>
        <item name="basicHeaderText">@style/BlueThemeBasicHeaderText</item>
        <item name="basicHeaderTextLight">@style/BlueThemeBasicHeaderTextLight</item>
        <item name="secondaryText">@style/BlueThemeSecondaryText</item>
        <item name="secondaryTextLight">@style/BlueThemeSecondaryTextLight</item>
        <item name="popUpMenuTheme">@style/BluePopUpMenuTheme</item>
        <item name="backgroundTheme">@style/BlueBackgroundTheme</item>
        <item name="backgroundThemeDark">@style/BlueBackgroundThemeDark</item>
        <item name="iconPrimaryColor">@color/colorPrimaryTextBlue</item>
        <item name="iconPrimaryColorLight">@color/colorPrimaryLightBlue</item>
        <item name="iconSecondaryColor">@color/colorAccentBlue</item>
    </style>

    <!-- Red application theme. -->
    <style name="RedAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryRed</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkRed</item>
        <item name="colorAccent">@color/colorAccentRed</item>
        <item name="colorTextAndIcons">@color/colorTextAndIconsRed</item>
        <item name="goalListBackgroundSelector">@drawable/list_goalshabits_item_selector_red</item>
        <item name="preferenceTheme">@style/RedPreferenceTheme</item>
        <item name="basicHeaderText">@style/RedThemeBasicHeaderText</item>
        <item name="basicHeaderTextLight">@style/RedThemeBasicHeaderTextLight</item>
        <item name="secondaryText">@style/RedThemeSecondaryText</item>
        <item name="secondaryTextLight">@style/RedThemeSecondaryTextLight</item>
        <item name="popUpMenuTheme">@style/RedPopUpMenuTheme</item>
        <item name="backgroundTheme">@style/RedBackgroundTheme</item>
        <item name="backgroundThemeDark">@style/RedBackgroundThemeDark</item>
        <item name="iconPrimaryColor">@color/colorPrimaryTextRed</item>
        <item name="iconPrimaryColorLight">@color/colorPrimaryLightRed</item>
        <item name="iconSecondaryColor">@color/colorAccentRed</item>
    </style>

    <!-- Red application theme. -->
    <style name="BlackAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryBlack</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBlack</item>
        <item name="colorAccent">@color/colorAccentBlack</item>
        <item name="colorTextAndIcons">@color/colorTextAndIconsBlack</item>
        <item name="goalListBackgroundSelector">@drawable/list_goalshabits_item_selector_black</item>
        <item name="preferenceTheme">@style/BlackPreferenceTheme</item>
        <item name="basicHeaderText">@style/BlackThemeBasicHeaderText</item>
        <item name="basicHeaderTextLight">@style/BlackThemeBasicHeaderTextLight</item>
        <item name="secondaryText">@style/BlackThemeSecondaryText</item>
        <item name="secondaryTextLight">@style/BlackThemeSecondaryTextLight</item>
        <item name="popUpMenuTheme">@style/BlackPopUpMenuTheme</item>
        <item name="backgroundTheme">@style/BlackBackgroundTheme</item>
        <item name="backgroundThemeDark">@style/BlackBackgroundThemeDark</item>
        <item name="iconPrimaryColor">@color/colorPrimaryTextBlack</item>
        <item name="iconPrimaryColorLight">@color/colorPrimaryLightBlack</item>
        <item name="iconSecondaryColor">@color/colorAccentBlack</item>
    </style>

    <!-- Styles that correspond to each theme -->

    <!-- BasicHeaderText style as well as overrides for the different themes available -->
    <style name="BasicHeaderText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>
    <style name="DefaultThemeBasicHeaderText" parent="@style/BasicHeaderText">
        <item name="android:textColor" >@color/colorPrimaryText</item>
    </style>
    <style name="PinkThemeBasicHeaderText" parent="@style/BasicHeaderText">
    <item name="android:textColor" >@color/colorPrimaryTextPink</item>
    </style>
    <style name="BlueThemeBasicHeaderText" parent="@style/BasicHeaderText">
        <item name="android:textColor" >@color/colorPrimaryTextBlue</item>
    </style>
    <style name="RedThemeBasicHeaderText" parent="@style/BasicHeaderText">
        <item name="android:textColor" >@color/colorPrimaryTextRed</item>
    </style>
    <style name="BlackThemeBasicHeaderText" parent="@style/BasicHeaderText">
        <item name="android:textColor" >@color/colorPrimaryTextBlack</item>
    </style>

    <!-- SecondaryText style as well as overrides for the different themes available -->
    <style name="SecondaryText">
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>
    <style name="DefaultThemeSecondaryText" parent="@style/SecondaryText">
        <item name="android:textColor" >@color/colorSecondaryText</item>
        <item name="android:backgroundTint">@color/colorSecondaryText</item>
    </style>
    <style name="PinkThemeSecondaryText" parent="@style/SecondaryText">
        <item name="android:textColor" >@color/colorSecondaryTextPink</item>
        <item name="android:backgroundTint">@color/colorSecondaryTextPink</item>
    </style>
    <style name="BlueThemeSecondaryText" parent="@style/SecondaryText">
        <item name="android:textColor" >@color/colorSecondaryTextBlue</item>
        <item name="android:backgroundTint">@color/colorSecondaryTextBlue</item>
    </style>
    <style name="RedThemeSecondaryText" parent="@style/SecondaryText">
        <item name="android:textColor" >@color/colorSecondaryTextRed</item>
        <item name="android:backgroundTint">@color/colorSecondaryTextRed</item>
    </style>
    <style name="BlackThemeSecondaryText" parent="@style/SecondaryText">
        <item name="android:textColor" >@color/colorSecondaryTextBlack</item>
        <item name="android:backgroundTint">@color/colorSecondaryTextBlack</item>
    </style>

    <!-- BasicHeaderTextLight style as well as overrides for the different themes available -->
    <style name="BasicHeaderTextLight">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextAndIcons</item>
    </style>
    <style name="DefaultThemeBasicHeaderTextLight">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextAndIcons</item>
    </style>
    <style name="PinkThemeBasicHeaderTextLight">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextAndIconsPink</item>
    </style>
    <style name="BlueThemeBasicHeaderTextLight">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextAndIconsBlue</item>
    </style>
    <style name="RedThemeBasicHeaderTextLight">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextAndIconsRed</item>
    </style>
    <style name="BlackThemeBasicHeaderTextLight">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextAndIconsBlack</item>
    </style>

    <!-- SecondaryTextLight style as well as overrides for the different themes available -->
    <style name="SecondaryTextLight">
        <item name="android:textColor">@color/colorPrimaryLight</item>
    </style>
    <style name="DefaultThemeSecondaryTextLight">
        <item name="android:textColor">@color/colorPrimaryLight</item>
    </style>
    <style name="PinkThemeSecondaryTextLight">
        <item name="android:textColor">@color/colorPrimaryLightPink</item>
    </style>
    <style name="BlueThemeSecondaryTextLight">
        <item name="android:textColor">@color/colorPrimaryLightBlue</item>
    </style>
    <style name="RedThemeSecondaryTextLight">
        <item name="android:textColor">@color/colorPrimaryLightRed</item>
    </style>
    <style name="BlackThemeSecondaryTextLight">
        <item name="android:textColor">@color/colorPrimaryLightBlack</item>
    </style>

    <!-- Override and set popUpMenuTheme depending on user selected Theme. -->
    <style name="PopUpMenuTheme" parent ="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorTextAndIcons</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="DefaultPopUpMenuTheme" parent ="PopUpMenuTheme">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorTextAndIcons</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="PinkPopUpMenuTheme" parent ="PopUpMenuTheme">
        <item name="android:background">@color/colorPrimaryDarkPink</item>
        <item name="android:textColor">@color/colorTextAndIconsPink</item>
        <item name="colorAccent">@color/colorAccentPink</item>
    </style>
    <style name="BluePopUpMenuTheme" parent ="PopUpMenuTheme">
        <item name="android:background">@color/colorPrimaryDarkBlue</item>
        <item name="android:textColor">@color/colorTextAndIconsBlue</item>
        <item name="colorAccent">@color/colorAccentBlue</item>
    </style>
    <style name="RedPopUpMenuTheme" parent ="PopUpMenuTheme">
        <item name="android:background">@color/colorPrimaryDarkRed</item>
        <item name="android:textColor">@color/colorTextAndIconsRed</item>
        <item name="colorAccent">@color/colorAccentRed</item>
    </style>
    <style name="BlackPopUpMenuTheme" parent ="PopUpMenuTheme">
        <item name="android:background">@color/colorPrimaryDarkBlack</item>
        <item name="android:textColor">@color/colorTextAndIconsBlack</item>
        <item name="colorAccent">@color/colorAccentBlack</item>
    </style>

    <!-- Override and set background style depending on user selected Theme. -->
    <style name="BackgroundTheme">
        <item name="android:background">@color/colorPrimaryLight</item>
    </style>
    <style name="DefaultBackgroundTheme" parent="BackgroundTheme">
        <item name="android:background">@color/colorPrimaryLight</item>
    </style>
    <style name="PinkBackgroundTheme" parent="BackgroundTheme">
        <item name="android:background">@color/colorPrimaryLightPink</item>
    </style>
    <style name="BlueBackgroundTheme" parent="BackgroundTheme">
        <item name="android:background">@color/colorPrimaryLightBlue</item>
    </style>
    <style name="RedBackgroundTheme" parent="BackgroundTheme">
        <item name="android:background">@color/colorPrimaryLightRed</item>
    </style>
    <style name="BlackBackgroundTheme" parent="BackgroundTheme">
        <item name="android:background">@color/colorPrimaryLightBlack</item>
    </style>

    <!-- Override and set dark background style depending on user selected Theme. -->
    <style name="BackgroundThemeDark">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>
    <style name="DefaultBackgroundThemeDark">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>
    <style name="PinkBackgroundThemeDark">
        <item name="android:background">@color/colorPrimaryDarkPink</item>
    </style>
    <style name="BlueBackgroundThemeDark">
        <item name="android:background">@color/colorPrimaryDarkBlue</item>
    </style>
    <style name="RedBackgroundThemeDark">
        <item name="android:background">@color/colorPrimaryDarkRed</item>
    </style>
    <style name="BlackBackgroundThemeDark">
        <item name="android:background">@color/colorPrimaryDarkBlack</item>
    </style>

    <!-- Override and set preference themes depending on user selected Theme. -->
    <style name="DefaultPreferenceTheme" parent ="PopUpMenuTheme">
        <item name="android:background">@drawable/list_goalshabits_item_selector</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="PinkPreferenceTheme" parent ="PopUpMenuTheme">
        <item name="android:background">@drawable/list_goalshabits_item_selector_pink</item>
        <item name="android:textColor">@color/colorPrimaryTextPink</item>
        <item name="colorAccent">@color/colorAccentPink</item>
    </style>
    <style name="BluePreferenceTheme" parent ="PopUpMenuTheme">
        <item name="android:background">@drawable/list_goalshabits_item_selector_blue</item>
        <item name="android:textColor">@color/colorPrimaryTextBlue</item>
        <item name="colorAccent">@color/colorAccentBlue</item>
    </style>
    <style name="RedPreferenceTheme" parent ="PopUpMenuTheme">
        <item name="android:background">@drawable/list_goalshabits_item_selector_red</item>
        <item name="android:textColor">@color/colorPrimaryTextRed</item>
        <item name="colorAccent">@color/colorAccentRed</item>
    </style>
    <style name="BlackPreferenceTheme" parent ="PopUpMenuTheme">
        <item name="android:background">@drawable/list_goalshabits_item_selector_black</item>
        <item name="android:textColor">@color/colorPrimaryTextBlack</item>
        <item name="colorAccent">@color/colorAccentBlack</item>
    </style>





    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
